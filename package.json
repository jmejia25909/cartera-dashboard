{
  "name": "cartera-dashboard",
  "description": "Sistema de gesti√≥n de carteras y cobranza",
  "author": "Tu Empresa",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"pnpm dev:renderer\" \"pnpm dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "pnpm electron:build && wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "electron:build": "tsc -p tsconfig.node.json && vite build --config electron.vite.config.ts",
    "start": "pnpm dev:renderer",
    "build": "vite build && tsc -p tsconfig.node.json && vite build --config electron.vite.config.ts",
    "build:installer": "pnpm build && electron-builder --win --config electron-builder.json5",
    "build:installer:mac": "pnpm build && electron-builder --mac --config electron-builder.json5",
    "build:all": "pnpm build && electron-builder --win --mac --config electron-builder.json5",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@ngrok/ngrok": "^1.7.0",
    "better-sqlite3": "^12.6.2",
    "chart.js": "^4.5.1",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^18.2.0",
    "recharts": "^3.7.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^8.0.5"
  }
}
